<h1>Shopping lists</h1>

<section>
    <div class="top-container">
      <section>
      <% hash = ShoppingList.total_amount(@recipe_foods, @inventory_foods) %>
        <p>Amount of food to buy: <%= hash[:recipe_food_values_count] %> </p>
        <p>Total value of food needed: <%= hash[:total_amount] %></p>
        <p>Recipe <%= @recipe_name.name %></p>
        <p>Inventory <%= @inventory_name.name %></p>
        <table>
          <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
          <% hash[:recipe_food_values].each do |key| %>
          <tr>
            <td><%= key[:name] %></td>
            <td><%= key[:quantity] %></td>
            <td><%= key[:value] %></td>
          <tr>
          <%end%>
        </table>
      </section>
    </div>
</section>
