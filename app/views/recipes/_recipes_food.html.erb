<%= form_with url: recipe_recipes_food_index_path(params[:id]), scope: :recipe_foods, class: 'modal-form' do |form| %>
  <%= form.label :quantity %>
  <%= form.number_field :quantity, in: 1.0..100.0%>
  <%= form.label :food_id %>
  <%= form.select :food_id, @foods.collect { |food| [food.name, food.id] }, { :prompt => 'Choose Food'}, class: "form-select", required: true %>
  <%= form.label :add %>
  <%= form.submit "Add"%>
<%end%>